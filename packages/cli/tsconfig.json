{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@base-template/*": ["../../templates/base-template/*"],
      "@base-functions/*": ["../../templates/base-functions/*"]
    }
  },
  "files": ["package.json"],
  "include": [
    "src/**/*",
    "add-line.ts",
    "build.ts",
    "cli.ts",
    "tests/**/*",
    "../../templates/base-template/*",
    "../../templates/base-functions/*"
  ],
  "exclude": ["dist", "node_modules"],
  "compileOnSave": false
}
